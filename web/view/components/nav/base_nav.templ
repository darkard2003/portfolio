package nav

templ BaseNav(
	leading templ.Component,
	navId string,
) {
	<nav id={ navId } class="fixed top-0 w-full z-50 bg-gray-950/90 light:bg-gray-50/90 backdrop-blur-sm border-b border-white/[0.05] light:border-black/[0.05]">
		<div class="max-w-5xl mx-auto px-6">
			<div class="flex items-center justify-between h-20">
				@leading
				{ children... }
			</div>
		</div>
	</nav>
}
