package components

templ ThemeToggle() {
	<button id="theme-toggle" hx-preserve @click="$store.darkMode.toggle()" class="text-gray-300 light:text-gray-500 hover:text-[var(--primary-color)] px-3 py-2 rounded-md text-sm font-medium">
		<span x-show="$store.darkMode.on">
			@Icon("sun", "w-5 h-5")
		</span>
		<span x-cloak x-show="! $store.darkMode.on">
			@Icon("moon", "w-5 h-5")
		</span>
	</button>
}
