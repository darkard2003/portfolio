package home

import "portfolio/internals/models"
import "portfolio/web/view/components"

templ ProjectSection(projects []models.Project) {
	<section id="projects" class="mb-16 md:mb-24">
		<h2 class="text-3xl md:text-4xl font-bold text-white mb-8 tracking-tight">Projects</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			for _, project := range projects {
				@components.ProjectCard(project)
			}
		</div>
	</section>
}
